<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/imageNewsFeedDetail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageNewsFeedDetail"
        android:layout_alignLeft="@+id/imageNewsFeedDetail"
        android:background="@anim/transparent_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_row_reportType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Medium Text"
            android:textColor="@color/orange"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/txt_row_subType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
             android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_row_Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Small Text"
             android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_row_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
             android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_row_Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
             android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
             android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</RelativeLayout>