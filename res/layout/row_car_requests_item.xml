<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@anim/bg_list_item"
    android:orientation="horizontal"
    android:padding="4dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="4dp" >

        <ImageButton
            android:id="@+id/ivStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/ic_open_default" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:shadowColor="#BB000000"
            android:shadowDx="+1"
            android:shadowDy="+1"
            android:shadowRadius="1"
            android:text="Mở"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff8800"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailArea" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:shadowColor="#BB000000"
                    android:shadowDx="+1"
                    android:shadowDy="+1"
                    android:shadowRadius="1"
                    android:text="Xuất phát: Nam Định"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:shadowColor="#BB000000"
                    android:shadowDx="+1"
                    android:shadowDy="+1"
                    android:shadowRadius="1"
                    android:text="Điểm đến: Tp Hồ Chí Minh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3dp"
                        android:shadowColor="#BB000000"
                        android:shadowDx="+1"
                        android:shadowDy="+1"
                        android:shadowRadius="1"
                        android:text="Giá: 1.000.000 - 2.000.000 VNĐ/Ngày"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff8800"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="Ngày đăng"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvCreateDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="12/2/2014"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ff8800"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvDoors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="Hết hạn"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvExpirationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="13/2/2014	"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ff8800"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvAirConditional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="Ngày đi"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tvStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#BB000000"
                            android:shadowDx="+1"
                            android:shadowDy="+1"
                            android:shadowRadius="1"
                            android:text="14/2/2014"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ff8800"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/transparentView"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="#00000000" >
        </ImageButton>
    </RelativeLayout>

</LinearLayout>